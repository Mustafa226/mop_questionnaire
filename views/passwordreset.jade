//login.jade

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title Password Reset
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(href='../css/signin.css', rel='stylesheet')
  body(data-spy='scroll', data-target='.scrollspy')
    .container
      form(name="login", action = "/users/password/reset", method = "post").form-signin
        h2.form-signin-heading Update Your Password
        label.sr-only(for='email') Email address
        input(type="text", name="email", id="email" placeholder="Email address").form-control
        label.sr-only(for='password') Password
        input(type="text", name="password", id="password" placeholder="New Password").form-control
        br
        button.btn.btn-lg.btn-primary.btn-block(type='submit' ac) Update Password
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')