extends layout

block content

    div.content
        div(class="centered")
            .form-group
                form(method='post', action='/questionnaires/add-questionnaire', role="form", rows='2')
                    .form-group
                        br
                        textarea.input-lg.form-control(id='questionnaire_form', type='text', name='questionnaire', placeholder='Enter a questionnaire name', required)
                        button.btn.btn-primary.btn-lg(type='submit') Create a Questionnaire
            h2.lead or Manage Questionnaires
    .row
            table.table
                each q in questionnaires
                    tr
                        td
                            a(class='question' href='/questionnaires/' + q.id)=q.questionnaire
                        td.col-md-2
                            .btn-toolbar
                                a.btn.btn-primary.singlebutton(href='/questionnaires/'+q.id)
                                    i.glyphicon.glyphicon-pencil
                                    span   Edit
                                a.btn.btn-danger.singlebutton(href='/questionnaires/'+q.id+'/delete')
                                    i.glyphicon.glyphicon-trash
                                    span  Remove
